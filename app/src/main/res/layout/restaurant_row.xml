<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rowLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="12dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/cardview_body"
            android:elevation="6dp"
            >

            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Title"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/restaurantIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/numIssues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Issues"
                android:textSize="18dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/restaurantIcon"
                app:layout_constraintTop_toBottomOf="@+id/restaurantName" />

            <TextView
                android:id="@+id/inspectionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inspection Date"
                android:textSize="18dp"
                android:textStyle="italic"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/restaurantIcon"
                app:layout_constraintTop_toBottomOf="@+id/numIssues" />

            <ImageView
                android:id="@+id/restaurantIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fork_spoon_icon"
                />

            <ImageView
                android:id="@+id/hazardIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/straight_face_icon"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>